{
  "$schema":"https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion":"1.0.0.0",
  "parameters":{
    "dnsNameLabel":{
      "type":"String"
    },
    "inputFolder":{
      "type":"String"
    },
    "outputFolder":{
      "type":"String"
    }
  },
  "resources":[
    {
      "apiVersion":"2018-06-01",
      "location":"[resourceGroup().location]",
      "name":"[parameters('dnsNameLabel')]",
      "properties":{
        "containers":[
          {
            "name":"worker-1",
            "properties":{
              "image":"vintratest/contacts_mvp:latest",
              "ports":[
                {
                  "port":"8000",
                  "protocol":"TCP"
                }
              ],
              "resources":{
                "requests":{
                  "cpu":"1.0",
                  "memoryInGb":"1.0"
                }
              },
              "volumeMounts":[
                {
                  "name":"devshm",
                  "mountPath":"/dev/shm"
                }
              ]
            }
          }
        ],
        "ipAddress":{
          "ports":[
            {
              "port":"8000",
              "protocol":"TCP"
            }
          ],
          "type":"Public",
          "dnsNameLabel":"[parameters('dnsNameLabel')]"
        },
        "osType":"Linux",
        "volumes":[
          {
            "name":"devshm",
            "emptyDir":{

            }
          }
        ]
      },
      "type":"Microsoft.ContainerInstance/containerGroups"
    }
  ]
}